@page "/Form/Create"
@model WebApplication2.Services.Form
@{
    ViewData["Title"] = "Create a new form";
    var page = new WebApplication2.Services.Page();
    var app = new WebApplication2.Services.Application();
    var question = new WebApplication2.Services.Question();
}

    <form method="post">
        <div class="form-group row">
            @Html.LabelFor(m => m.FormName, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.EditorFor(m => m.FormName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => app.AppType, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.EditorFor(m => app.AppType, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="pages">
            <div class="form-group row">
                <div class="btn-group-vertical" role="group" aria-label="Basic example">
                    <button id="create-form" class="btn btn-secondary align-content-end">Add a page to the form</button>
                </div>
            </div>
            <div class="form-group row page">
                @Html.LabelFor(m => page.Name, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.EditorFor(m => page.Name, new { htmlAttributes = new { Class = "form-control" } })
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Sign in</button>
            </div>
        </div>
    </form>

