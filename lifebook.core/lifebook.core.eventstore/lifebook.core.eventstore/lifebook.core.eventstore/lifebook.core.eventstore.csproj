<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <PackOnBuild>true</PackOnBuild>
    <Authors>lifebook</Authors>
    <Copyright>2019</Copyright>
    <Owners>lifebook</Owners>
    <Title>lifebook</Title>
    <Description>the library to connect to eventstore</Description>
    <PackageId>lifebook.core.eventstore</PackageId>
    <PackageProjectUrl>https://github.com/mkcoder/lifebook</PackageProjectUrl>
    <PackageVersion>2.0.4</PackageVersion>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="services\" />
    <Folder Include="ioc\" />
    <Folder Include="interfaces\" />
    <Folder Include="extensions\" />
    <Folder Include="configurations\" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\lifebook.core.eventstore.domain\lifebook.core.eventstore.domain.csproj" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Castle.Windsor" Version="5.0.0" />
    <PackageReference Include="EventStore.ClientAPI.NetCore" Version="4.1.0.23" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.2" />
    <PackageReference Include="lifebook.core.logging" Version="1.0.10" />
    <PackageReference Include="lifebook.core.services" Version="1.0.11" />
  </ItemGroup>
  <ItemGroup>
    <None Remove="eventstoreconfiguration.dev.json" />
  </ItemGroup>
  <ItemGroup>
    <None Update="eventstoreconfiguration.dev.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="eventstoreconfiguration.dev.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <IncludeInPackage>true</IncludeInPackage>
    </EmbeddedResource>
  </ItemGroup>
</Project>
